<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe7c5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ListView
        android:id="@android:id/list"
        android:layout_width="366dp"
        android:layout_height="377dp"
        android:layout_alignEnd="@+id/btnSortByRecent"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/btnSortByDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btnSortByRecent"
        android:background="#4ebfe9"
        android:text="Sort By Date" />

    <Button
        android:id="@+id/btnSortByRecent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnSortByHighPriority"
        android:background="#4ebfe9"
        android:text="Sort By Recent" />

    <Button
        android:id="@+id/btnSortByHighPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSortByDate"
        android:background="#4ebfe9"
        android:text="High Priority Tasks" />

</RelativeLayout>
